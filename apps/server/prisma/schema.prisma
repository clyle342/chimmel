generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  DRIVER
  ADMIN
}

enum DriverStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TripStatus {
  REQUESTED
  QUOTED
  PAYMENT_PENDING
  PAID
  MATCHING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  EXPIRED
}

enum PetType {
  DOG
  CAT
  OTHER
}

enum PetSize {
  S
  M
  L
}

enum RouteBand {
  CITY
  INTERCITY
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum OfferStatus {
  OFFERED
  ACCEPTED
  DECLINED
  EXPIRED
}

model User {
  id        String       @id @default(uuid())
  phone     String       @unique
  role      Role
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  driver    DriverProfile?
  ownerTrips Trip[]      @relation("OwnerTrips")
  driverTrips Trip[]     @relation("DriverTrips")
}

model DriverProfile {
  id            String       @id @default(uuid())
  userId        String       @unique
  vehicleType   String
  plate         String
  capacityNotes String?
  docSubmitted  Boolean      @default(false)
  status        DriverStatus @default(PENDING)
  isOnline      Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  user          User         @relation(fields: [userId], references: [id])
  offers        TripOffer[]
}

model Trip {
  id            String      @id @default(uuid())
  ownerId       String
  driverId      String?
  pickup        String
  dropoff       String
  petType       PetType
  petSize       PetSize
  ownerRides    Boolean
  routeBand     RouteBand
  status        TripStatus  @default(REQUESTED)
  quotedPrice   Int?
  quoteExpiresAt DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  owner         User        @relation("OwnerTrips", fields: [ownerId], references: [id])
  driver        User?       @relation("DriverTrips", fields: [driverId], references: [id])
  payment       Payment?
  offers        TripOffer[]

  @@index([status])
}

model TripOffer {
  id        String       @id @default(uuid())
  tripId    String
  driverId  String
  status    OfferStatus  @default(OFFERED)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  trip      Trip         @relation(fields: [tripId], references: [id])
  driver    DriverProfile @relation(fields: [driverId], references: [id])

  @@unique([tripId, driverId])
  @@index([status])
}

model Payment {
  id            String        @id @default(uuid())
  tripId        String        @unique
  amount        Int
  status        PaymentStatus @default(PENDING)
  provider      String
  providerRef   String?
  rawCallback   Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  trip          Trip          @relation(fields: [tripId], references: [id])
}
